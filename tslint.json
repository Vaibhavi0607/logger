{
	"defaultSeverity": "error",
	"extends": ["tslint:recommended"],
	"rules": {
		"max-line-length": {
			"options": [120]
		},
		"no-debugger": true,
		"quotemark": [true, "single", "avoid-escape"],
		"indent": [true, "tabs", 2],
		"semicolon": [true, "always"],
		"no-console": {
			"severity": "warning",
			"options": ["debug", "info", "log", "time", "timeEnd", "trace"]
		}
	},
	"jsRules": {
			"max-line-length": {
				"options": [120]
			}
	},
	"rulesDirectory": []
}